[Unit]
Description=octoblu-alexa-service-sidekick
After=octoblu-alexa-service@%i.service

[Service]
TimeoutStartSec=30
Restart=always


ExecStartPre=/bin/bash -c " \
  echo 'Writing kronk to /tmp' \
  && /usr/bin/etcdctl get /kronk/sidekick/start > /tmp/octoblu-alexa-service-sidekick-%i-kronk-start \
  && chmod +x /tmp/octoblu-alexa-service-sidekick-%i-kronk-* \
"
ExecStart=/usr/bin/etcdctl exec-watch \
  /octoblu/alexa-service/restart \
  -- /tmp/octoblu-alexa-service-sidekick-%i-kronk-start 10 /octoblu/alexa-service/docker_url octoblu-alexa-service-%i octoblu-alexa-service-register-%i

[Install]
WantedBy=multi-user.target

[X-Fleet]
X-ConditionMachineOf=octoblu-alexa-service@%i.service

[Unit]
Description=octoblu-alexa-service-sidekick
After=octoblu-alexa-service@%i.service

[Service]
TimeoutStartSec=30
Restart=always


ExecStartPre=/bin/bash -c " \
  echo 'Writing kronk' \
  && mkdir -p /run/kronk/octoblu-alexa-service-sidekick-%i \
  && /usr/bin/etcdctl get /kronk/wrapper/run > /run/kronk/octoblu-alexa-service-sidekick-%i/kronk-run \
  && chmod +x /run/kronk/octoblu-alexa-service-sidekick-%i/kronk-run \
"
ExecStart=/usr/bin/etcdctl exec-watch \
  /octoblu/alexa-service/restart \
  -- /run/kronk/octoblu-alexa-service-sidekick-%i/kronk-run \
    /kronk/sidekick/start octoblu-alexa-service-sidekick-%i \
    10 /octoblu/alexa-service/docker_url octoblu-alexa-service-%i octoblu-alexa-service-register-%i

[Install]
WantedBy=multi-user.target

[X-Fleet]
X-ConditionMachineOf=octoblu-alexa-service@%i.service

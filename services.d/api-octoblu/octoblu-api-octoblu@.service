[Unit]
Description=octoblu-api-octoblu
Wants=octoblu-api-octoblu-register@%i.service
Wants=octoblu-api-octoblu-sidekick@%i.service

[Service]
TimeoutStartSec=300
StartLimitInterval=30
StartLimitBurst=30
Restart=always


ExecStartPre=/bin/sh -c '/usr/bin/docker login \
  --username $(/usr/bin/etcdctl get /docker/quay.io/username) \
  --password $(/usr/bin/etcdctl get /docker/quay.io/password) \
  --email $(/usr/bin/etcdctl get /docker/quay.io/email) \
  quay.io'

ExecStartPre=/bin/bash -c " \
  echo 'Writing kronk to /tmp' \
  && /usr/bin/etcdctl get /kronk/service/start-pre > /tmp/octoblu-api-octoblu-%i-kronk-start-pre \
  && /usr/bin/etcdctl get /kronk/service/start > /tmp/octoblu-api-octoblu-%i-kronk-start \
  && /usr/bin/etcdctl get /kronk/service/stop > /tmp/octoblu-api-octoblu-%i-kronk-stop \
  && chmod +x /tmp/octoblu-api-octoblu-%i-kronk-* \
"
ExecStartPre=/bin/bash -c " \
  /tmp/octoblu-api-octoblu-%i-kronk-start-pre \
    octoblu-api-octoblu \
    %i \
    /octoblu/api-octoblu/env \
    /octoblu/api-octoblu/docker_url \
"
ExecStart=/bin/bash -c " \
  /tmp/octoblu-api-octoblu-%i-kronk-start \
    octoblu-api-octoblu \
    %i \
    512m \
    /octoblu/api-octoblu/docker_url \
    /octoblu/api-octoblu \
"
ExecStop=/bin/bash -c " \
  /tmp/octoblu-api-octoblu-%i-kronk-stop \
    octoblu-api-octoblu \
    %i \
"

[Install]
WantedBy=multi-user.target

[X-Fleet]
MachineMetadata=Services=true

[Unit]
Description=octoblu-box-link-service-sidekick


[Service]
TimeoutStartSec=30
Restart=always


ExecStartPre=/bin/bash -c " \
  echo 'Writing kronk' \
  && mkdir -p /run/kronk/octoblu-box-link-service-sidekick-%i \
  && /usr/bin/etcdctl get /kronk/wrapper/run > /run/kronk/octoblu-box-link-service-sidekick-%i/kronk-run \
  && chmod +x /run/kronk/octoblu-box-link-service-sidekick-%i/kronk-run \
"
ExecStart=/usr/bin/etcdctl exec-watch \
  /octoblu/box-link-service/restart \
  -- /run/kronk/octoblu-box-link-service-sidekick-%i/kronk-run \
    /kronk/sidekick/start octoblu-box-link-service-sidekick-%i \
    10 /octoblu/box-link-service/docker_url octoblu-box-link-service-%i octoblu-box-link-service-register-%i

[Install]
WantedBy=multi-user.target

[X-Fleet]
X-ConditionMachineOf=octoblu-box-link-service@%i.service

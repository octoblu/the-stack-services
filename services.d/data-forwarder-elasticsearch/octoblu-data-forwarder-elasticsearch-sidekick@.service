[Unit]
Description=octoblu-data-forwarder-elasticsearch-sidekick
After=octoblu-data-forwarder-elasticsearch@%i.service

[Service]
TimeoutStartSec=30
Restart=always


ExecStartPre=/bin/bash -c " \
  echo 'Writing kronk' \
  && mkdir -p /run/kronk/octoblu-data-forwarder-elasticsearch-sidekick-%i \
  && /usr/bin/etcdctl get /kronk/wrapper/run > /run/kronk/octoblu-data-forwarder-elasticsearch-sidekick-%i/kronk-run \
  && chmod +x /run/kronk/octoblu-data-forwarder-elasticsearch-sidekick-%i/kronk-run \
"
ExecStart=/usr/bin/etcdctl exec-watch \
  /octoblu/data-forwarder-elasticsearch/restart \
  -- /run/kronk/octoblu-data-forwarder-elasticsearch-sidekick-%i/kronk-run \
    /kronk/sidekick/start octoblu-data-forwarder-elasticsearch-sidekick-%i \
    10 /octoblu/data-forwarder-elasticsearch/docker_url octoblu-data-forwarder-elasticsearch-%i octoblu-data-forwarder-elasticsearch-register-%i

[Install]
WantedBy=multi-user.target

[X-Fleet]
X-ConditionMachineOf=octoblu-data-forwarder-elasticsearch@%i.service

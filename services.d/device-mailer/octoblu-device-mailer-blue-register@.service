[Unit]
Description=Register with vulcand for octoblu-device-mailer-blue

[Service]
TimeoutStartSec=300
EnvironmentFile=/etc/environment
RemainAfterExit=yes
Restart=always
ExecStartPre=-/usr/bin/docker kill octoblu-device-mailer-blue-register-%i
ExecStartPre=-/usr/bin/docker rm octoblu-device-mailer-blue-register-%i
ExecStart=/bin/sh -c "/usr/bin/docker run \
     --name octoblu-device-mailer-blue-register-%i \
     --rm \
     --net host \
     --env URL=http://${COREOS_PRIVATE_IPV4}:$(/usr/bin/etcdctl get /octoblu/device-mailer/blue/port) \
     --env BACKEND_ID=octoblu-device-mailer-blue \
     --env SERVER_ID=octoblu-device-mailer-blue-%i \
     --env VULCAN_URL=http://localhost:8182 \
     --env TIMEOUT_SECS=5 \
     --env FRONTEND_TTL_SECS=11 \
     $(/usr/bin/etcdctl get /image-versions/octoblu/register-sidekick/docker_url) \
"

ExecStop=-/usr/bin/docker kill octoblu-device-mailer-blue-register-%i
ExecStop=/bin/sh -c "/usr/bin/echo 'Removing server from vulcand' && \
  /usr/bin/docker run --rm octoblu/vctl server rm --backend octoblu-device-mailer-blue --id octoblu-device-mailer-blue-%i --vulcan http://$(ifconfig docker0 | grep 'inet ' | awk '{print $2}'):8182"

[X-Fleet]
X-ConditionMachineOf=octoblu-device-mailer-blue@%i.service

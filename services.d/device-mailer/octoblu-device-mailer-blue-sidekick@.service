[Unit]
Description=octoblu-device-mailer-blue-sidekick

[Service]
TimeoutStartSec=30
Restart=always
ExecStart=/bin/sh -c "/usr/bin/etcdctl exec-watch \
  /octoblu/device-mailer/restart \
  -- sh -c \"(docker inspect --format='{{.Id}}' --type=image \$(etcdctl get /octoblu/device-mailer/blue/docker_url) \
               || docker pull \$(etcdctl get /octoblu/device-mailer/docker_url)) \
               && docker stop \
                    --time=5 \
                    octoblu-device-mailer-blue-%i\""

[Install]
WantedBy=multi-user.target

[X-Fleet]
X-ConditionMachineOf=octoblu-device-mailer-blue@%i.service

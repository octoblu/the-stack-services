[Unit]
Description=octoblu-device-mailer-blue
Wants=vulcand.service
After=vulcand.service

[Service]
TimeoutStartSec=300
Restart=always

ExecStartPre=/usr/bin/etcdctl get /octoblu/device-mailer/blue/port || /usr/bin/echo "etcd did not contain /octoblu/device-mailer/blue/port" && exit 1
ExecStartPre=/usr/bin/etcdctl get /octoblu/device-mailer/blue/docker_url || /usr/bin/echo "etcd did not contain /octoblu/device-mailer/blue/docker_url" && exit 1
ExecStartPre=-/usr/bin/docker rm --force octoblu-device-mailer-blue-env-%i octoblu-device-mailer-blue-%i
ExecStartPre=/bin/sh -c "/usr/bin/docker run --rm \
  --name octoblu-device-mailer-blue-env-%i \
  -e ETCDCTL_PEERS=http://$(ifconfig docker0 | grep 'inet ' | awk '{print $2}'):2379 \
  quay.io/octoblu/etcd-to-env /octoblu/device-mailer/env > /tmp/octoblu-device-mailer-blue.env \
"
ExecStart=/bin/sh -c "/usr/bin/docker run --rm \
  --name octoblu-device-mailer-blue-%i \
  --env-file /tmp/octoblu-device-mailer-blue.env \
  --memory 512m \
  -p $(/usr/bin/etcdctl get /octoblu/device-mailer/blue/port):80 \
  $(/usr/bin/etcdctl get /octoblu/device-mailer/blue/docker_url) \
"
ExecStop=/usr/bin/docker stop --time=5 octoblu-device-mailer-blue-%i

[Install]
WantedBy=multi-user.target

[X-Fleet]
Conflicts=octoblu-device-mailer-blue@*.service
MachineMetadata=Services=true

[Unit]
Description=octoblu-endo-manager-sidekick
After=octoblu-endo-manager@%i.service

[Service]
EnvironmentFile=/etc/environment
TimeoutStartSec=30
Restart=always

ExecStartPre=/bin/bash -c " \
  echo 'Writing kronk' \
  && mkdir -p /run/kronk/octoblu-endo-manager-sidekick-%i \
  && /usr/bin/curl -s http://kronk.octoblu.com/latest/wrapper/run > /run/kronk/octoblu-endo-manager-sidekick-%i/kronk-run \
  && chmod +x /run/kronk/octoblu-endo-manager-sidekick-%i/kronk-run \
"
ExecStart=/bin/sh -c " \
  /run/kronk/octoblu-endo-manager-sidekick-%i/kronk-run \
    /kronk/sidekick/start octoblu-endo-manager-%i \
    octoblu \
    endo-manager \
    %i \
"

[Install]
WantedBy=multi-user.target

[X-Fleet]
X-ConditionMachineOf=octoblu-endo-manager@%i.service

[Unit]
Description=octoblu-friendly-sharefile-service-sidekick


[Service]
TimeoutStartSec=30
Restart=always


ExecStartPre=/bin/bash -c " \
  echo 'Writing kronk' \
  && mkdir -p /run/kronk/octoblu-friendly-sharefile-service-sidekick-%i \
  && /usr/bin/etcdctl get /kronk/wrapper/run > /run/kronk/octoblu-friendly-sharefile-service-sidekick-%i/kronk-run \
  && chmod +x /run/kronk/octoblu-friendly-sharefile-service-sidekick-%i/kronk-run \
"
ExecStart=/usr/bin/etcdctl exec-watch \
  /octoblu/friendly-sharefile-service/restart \
  -- /run/kronk/octoblu-friendly-sharefile-service-sidekick-%i/kronk-run \
    /kronk/sidekick/start octoblu-friendly-sharefile-service-sidekick-%i \
    10 /octoblu/friendly-sharefile-service/docker_url octoblu-friendly-sharefile-service-%i octoblu-friendly-sharefile-service-register-%i

[Install]
WantedBy=multi-user.target

[X-Fleet]
X-ConditionMachineOf=octoblu-friendly-sharefile-service@%i.service

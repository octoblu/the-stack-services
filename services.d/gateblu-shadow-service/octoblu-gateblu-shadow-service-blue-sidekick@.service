[Unit]
Description=octoblu-gateblu-shadow-service-blue-sidekick

[Service]
TimeoutStartSec=30
Restart=always
ExecStart=/bin/sh -c "/usr/bin/etcdctl exec-watch \
  /octoblu/gateblu-shadow-service/restart \
  -- sh -c \"(docker inspect --format='{{.Id}}' --type=image \$(etcdctl get /octoblu/gateblu-shadow-service/green/docker_url) \
               || docker pull \$(etcdctl get /octoblu/gateblu-shadow-service/docker_url)) \
               && docker stop \
                    --time=5 \
                    octoblu-gateblu-shadow-service-blue-%i\""

[Install]
WantedBy=multi-user.target

[X-Fleet]
X-ConditionMachineOf=octoblu-gateblu-shadow-service-blue@%i.service

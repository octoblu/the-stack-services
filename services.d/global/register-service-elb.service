[Unit]
Description=Register Service with ELB

[Service]
TimeoutStartSec=300
ExecStartPre=/bin/sh -c "/usr/bin/docker pull $(/usr/bin/etcdctl get /octoblu/register-serivce-elb/docker_url)"
ExecStart=/bin/sh -c "/usr/bin/docker run --rm \
  --name register-service-elb \
  -e INSTANCE_HOSTNAME=$(hostname) \
  $(/usr/bin/etcdctl get /octoblu/register-serivce-elb/docker_url)"

[X-Fleet]
Global=true

[Unit]
Description=Register with vulcand for octoblu-little-bits-cloud-proxy-blue
BindsTo=octoblu-little-bits-cloud-proxy-blue@%i.service
After=octoblu-little-bits-cloud-proxy-blue@%i.service

[Service]
EnvironmentFile=/etc/environment
RemainAfterExit=yes
ExecStart=/bin/sh -c "/usr/bin/echo 'Adding backend, server, and frontend to vulcand' && \
  /usr/bin/docker run --rm octoblu/vctl backend upsert \
    --id octoblu-little-bits-cloud-proxy-blue \
    --vulcan http://$(ifconfig docker0 | grep 'inet ' | awk '{print $2}'):8182 && \
  /usr/bin/docker run --rm octoblu/vctl server upsert \
    --id octoblu-little-bits-cloud-proxy-blue-%i \
    --backend octoblu-little-bits-cloud-proxy-blue \
    --url http://${COREOS_PRIVATE_IPV4}:$(/usr/bin/etcdctl get /octoblu/little-bits-cloud-proxy/blue/port) \
    --vulcan http://$(ifconfig docker0 | grep 'inet ' | awk '{print $2}'):8182 \
"

ExecStop=/bin/sh -c "/usr/bin/echo 'Removing server from vulcand' && \
  /usr/bin/docker run --rm octoblu/vctl server rm --id octoblu-little-bits-cloud-proxy-blue-%i --vulcan http://$(ifconfig docker0 | grep 'inet ' | awk '{print $2}'):8182"

[X-Fleet]
X-ConditionMachineOf=octoblu-little-bits-cloud-proxy-blue@%i.service

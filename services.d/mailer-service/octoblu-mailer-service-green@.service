[Unit]
Description=octoblu-mailer-service-green
Wants=vulcand.service
After=vulcand.service

[Service]
TimeoutStartSec=300
Restart=always

ExecStartPre=/usr/bin/etcdctl get /octoblu/mailer-service/green/port || /usr/bin/echo "etcd did not contain /octoblu/mailer-service/green/port" && exit 1
ExecStartPre=/usr/bin/etcdctl get /octoblu/mailer-service/green/docker_url || /usr/bin/echo "etcd did not contain /octoblu/mailer-service/green/docker_url" && exit 1
ExecStartPre=-/usr/bin/docker rm --force octoblu-mailer-service-green-env-%i octoblu-mailer-service-green-%i
ExecStartPre=/bin/sh -c "/usr/bin/docker run --rm \
  --name octoblu-mailer-service-green-env-%i \
  -e ETCDCTL_PEERS=http://$(ifconfig docker0 | grep 'inet ' | awk '{print $2}'):2379 \
  quay.io/octoblu/etcd-to-env /octoblu/mailer-service/env > /tmp/octoblu-mailer-service-green.env \
"
ExecStart=/bin/sh -c "/usr/bin/docker run --rm \
  --name octoblu-mailer-service-green-%i \
  --env-file /tmp/octoblu-mailer-service-green.env \
  --memory 512m \
  -p $(/usr/bin/etcdctl get /octoblu/mailer-service/green/port):80 \
  $(/usr/bin/etcdctl get /octoblu/mailer-service/green/docker_url) \
"
ExecStop=/usr/bin/docker stop --time=5 octoblu-mailer-service-green-%i

[Install]
WantedBy=multi-user.target

[X-Fleet]
Conflicts=octoblu-mailer-service-green@*.service
MachineMetadata=Services=true

[Unit]
Description=octoblu-meshblu-authenticator-cwc-staging-sidekick
After=octoblu-meshblu-authenticator-cwc-staging@%i.service

[Service]
TimeoutStartSec=30
Restart=always


ExecStartPre=/bin/bash -c " \
  echo 'Writing kronk' \
  && mkdir -p /run/kronk/octoblu-meshblu-authenticator-cwc-staging-sidekick-%i \
  && /usr/bin/etcdctl get /kronk/wrapper/run > /run/kronk/octoblu-meshblu-authenticator-cwc-staging-sidekick-%i/kronk-run \
  && chmod +x /run/kronk/octoblu-meshblu-authenticator-cwc-staging-sidekick-%i/kronk-run \
"
ExecStart=/usr/bin/etcdctl exec-watch \
  /octoblu/meshblu-authenticator-cwc-staging/restart \
  -- /run/kronk/octoblu-meshblu-authenticator-cwc-staging-sidekick-%i/kronk-run \
    /kronk/sidekick/start octoblu-meshblu-authenticator-cwc-staging-sidekick-%i \
    10 /octoblu/meshblu-authenticator-cwc-staging/docker_url octoblu-meshblu-authenticator-cwc-staging-%i octoblu-meshblu-authenticator-cwc-staging-register-%i

[Install]
WantedBy=multi-user.target

[X-Fleet]
X-ConditionMachineOf=octoblu-meshblu-authenticator-cwc-staging@%i.service

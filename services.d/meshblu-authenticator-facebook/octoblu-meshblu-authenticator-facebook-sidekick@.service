[Unit]
Description=octoblu-meshblu-authenticator-facebook-sidekick


[Service]
TimeoutStartSec=30
Restart=always


ExecStartPre=/bin/bash -c " \
  echo 'Writing kronk to /tmp' \
  && /usr/bin/etcdctl get /kronk/sidekick/start > /tmp/octoblu-meshblu-authenticator-facebook-sidekick-%i-kronk-start \
  && chmod +x /tmp/octoblu-meshblu-authenticator-facebook-sidekick-%i-kronk-* \
"
ExecStart=/usr/bin/etcdctl exec-watch \
  /octoblu/meshblu-authenticator-facebook/restart \
  -- /tmp/octoblu-meshblu-authenticator-facebook-sidekick-%i-kronk-start 10 /octoblu/meshblu-authenticator-facebook/docker_url octoblu-meshblu-authenticator-facebook-%i octoblu-meshblu-authenticator-facebook-register-%i

[Install]
WantedBy=multi-user.target

[X-Fleet]
X-ConditionMachineOf=octoblu-meshblu-authenticator-facebook@%i.service

[Unit]
Description=octoblu-meshblu-authenticator-twitter-sidekick
After=octoblu-meshblu-authenticator-twitter@%i.service

[Service]
TimeoutStartSec=30
Restart=always


ExecStartPre=/bin/bash -c " \
  echo 'Writing kronk to /tmp' \
  && /usr/bin/etcdctl get /kronk/sidekick/start > /tmp/octoblu-meshblu-authenticator-twitter-sidekick-%i-kronk-start \
  && chmod +x /tmp/octoblu-meshblu-authenticator-twitter-sidekick-%i-kronk-* \
"
ExecStart=/usr/bin/etcdctl exec-watch \
  /octoblu/meshblu-authenticator-twitter/restart \
  -- /tmp/octoblu-meshblu-authenticator-twitter-sidekick-%i-kronk-start 10 /octoblu/meshblu-authenticator-twitter/docker_url octoblu-meshblu-authenticator-twitter-%i octoblu-meshblu-authenticator-twitter-register-%i

[Install]
WantedBy=multi-user.target

[X-Fleet]
X-ConditionMachineOf=octoblu-meshblu-authenticator-twitter@%i.service

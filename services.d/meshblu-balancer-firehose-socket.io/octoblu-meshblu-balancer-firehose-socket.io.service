[Unit]
Description=octoblu-meshblu-balancer-firehose-socket.io
Wants=octoblu-meshblu-balancer-firehose-socket.io-register.service
Wants=octoblu-meshblu-balancer-firehose-socket.io-sidekick.service

[Service]
EnvironmentFile=/etc/environment
TimeoutStartSec=300
StartLimitInterval=30
StartLimitBurst=30
Restart=always

ExecStartPre=/bin/bash -c " \
  echo 'Writing kronk' \
  && mkdir -p /run/kronk/octoblu-meshblu-balancer-firehose-socket.io \
  && /usr/bin/etcdctl get /kronk/wrapper/run > /run/kronk/octoblu-meshblu-balancer-firehose-socket.io/kronk-run \
  && chmod +x /run/kronk/octoblu-meshblu-balancer-firehose-socket.io/kronk-run \
"
ExecStartPre=/bin/bash -c " \
  /run/kronk/octoblu-meshblu-balancer-firehose-socket.io/kronk-run \
    /kronk/balancer/start-pre octoblu-meshblu-balancer-firehose-socket.io \
      octoblu \
      meshblu-balancer-firehose-socket.io \
      meshblu-core-firehose-socket.io \
"
ExecStart=/bin/bash -c " \
  /run/kronk/octoblu-meshblu-balancer-firehose-socket.io/kronk-run \
    /kronk/balancer/start octoblu-meshblu-balancer-firehose-socket.io \
      octoblu \
      meshblu-balancer-firehose-socket.io \
      meshblu-core-firehose-socket.io \
"
ExecStop=/bin/bash -c " \
  /run/kronk/octoblu-meshblu-balancer-firehose-socket.io/kronk-run \
    /kronk/balancer/stop octoblu-meshblu-balancer-firehose-socket.io \
      octoblu \
      meshblu-balancer-firehose-socket.io \
      meshblu-core-firehose-socket.io \
"

[Install]
WantedBy=multi-user.target

[X-Fleet]
MachineMetadata=Services=true

[Unit]
Description=octoblu-meshblu-balancer-mqtt-sidekick

[Service]
TimeoutStartSec=30
Restart=always
ExecStartPre=/bin/bash -c " \
  echo 'Writing kronk to /tmp' \
  && /usr/bin/etcdctl get /kronk/sidekick/start > /tmp/octoblu-meshblu-balancer-mqtt-sidekick-kronk-start \
  && chmod +x /tmp/octoblu-meshblu-balancer-mqtt-sidekick-kronk-* \
"
ExecStart=/usr/bin/etcdctl exec-watch \
  /octoblu/meshblu-balancer-mqtt/restart \
  -- /tmp/octoblu-meshblu-balancer-mqtt-sidekick-kronk-start 10 /octoblu/meshblu-balancer-mqtt/docker_url octoblu-meshblu-balancer-mqtt octoblu-meshblu-balancer-mqtt-register

[Install]
WantedBy=multi-user.target

[X-Fleet]
X-ConditionMachineOf=octoblu-meshblu-balancer-mqtt.service

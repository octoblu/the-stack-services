[Unit]
Description=octoblu-meshblu-channel-splunk-register
After=octoblu-meshblu-channel-splunk@%i.service

[Service]
TimeoutStartSec=300
EnvironmentFile=/etc/environment
Restart=always
ExecStartPre=/bin/bash -c " \
  echo 'Writing kronk' \
  && mkdir -p /run/kronk/octoblu-meshblu-channel-splunk-register-%i \
  && /usr/bin/etcdctl get /kronk/wrapper/run > /run/kronk/octoblu-meshblu-channel-splunk-register-%i/kronk-run \
  && chmod +x /run/kronk/octoblu-meshblu-channel-splunk-register-%i/kronk-run \
"
ExecStartPre=/bin/bash -c " \
  /run/kronk/octoblu-meshblu-channel-splunk-register-%i/kronk-run \
    /kronk/register/start-pre octoblu-meshblu-channel-splunk-%i \
      octoblu-meshblu-channel-splunk \
      %i \
      /octoblu/meshblu-channel-splunk/register-env \
"
ExecStart=/bin/sh -c " \
  /run/kronk/octoblu-meshblu-channel-splunk-register-%i/kronk-run \
    /kronk/register/start octoblu-meshblu-channel-splunk-%i \
      octoblu-meshblu-channel-splunk \
      %i \
"
ExecStop=/bin/sh -c " \
  /run/kronk/octoblu-meshblu-channel-splunk-register-%i/kronk-run \
    /kronk/register/stop octoblu-meshblu-channel-splunk-%i \
      octoblu-meshblu-channel-splunk \
      %i \
"

[X-Fleet]
X-ConditionMachineOf=octoblu-meshblu-channel-splunk@%i.service

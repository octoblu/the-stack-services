[Unit]
Description=octoblu-meshblu-core-dispatcher-sidekick


[Service]
TimeoutStartSec=30
Restart=always


ExecStartPre=/bin/bash -c " \
  echo 'Writing kronk' \
  && mkdir -p /run/kronk/octoblu-meshblu-core-dispatcher-sidekick-%i \
  && /usr/bin/etcdctl get /kronk/wrapper/run > /run/kronk/octoblu-meshblu-core-dispatcher-sidekick-%i/kronk-run \
  && chmod +x /run/kronk/octoblu-meshblu-core-dispatcher-sidekick-%i/kronk-run \
"
ExecStart=/usr/bin/etcdctl exec-watch \
  /octoblu/meshblu-core-dispatcher/restart \
  -- /run/kronk/octoblu-meshblu-core-dispatcher-sidekick-%i/kronk-run \
    /kronk/sidekick/start octoblu-meshblu-core-dispatcher-sidekick-%i \
    10 /octoblu/meshblu-core-dispatcher/docker_url octoblu-meshblu-core-dispatcher-%i octoblu-meshblu-core-dispatcher-register-%i

[Install]
WantedBy=multi-user.target

[X-Fleet]
X-ConditionMachineOf=octoblu-meshblu-core-dispatcher@%i.service

[Unit]
Description=octoblu-meshblu-core-dispatcher
Wants=vulcand.service
After=vulcand.service

[Service]
TimeoutStartSec=300
Restart=always
ExecStartPre=/bin/sh -c '/usr/bin/docker login \
  --username $(/usr/bin/etcdctl get /docker/quay.io/username) \
  --password $(/usr/bin/etcdctl get /docker/quay.io/password) \
  --email $(/usr/bin/etcdctl get /docker/quay.io/email) \
  quay.io'
ExecStartPre=/usr/bin/etcdctl get /octoblu/meshblu-core-dispatcher/docker_url || /usr/bin/echo "etcd did not contain /octoblu/meshblu-core-dispatcher/docker_url" && exit 1
ExecStartPre=-/usr/bin/docker kill octoblu-meshblu-core-dispatcher-env-%i
ExecStartPre=-/usr/bin/docker rm octoblu-meshblu-core-dispatcher-env-%i
ExecStartPre=-/usr/bin/docker kill octoblu-meshblu-core-dispatcher-%i
ExecStartPre=-/usr/bin/docker rm octoblu-meshblu-core-dispatcher-%i
ExecStartPre=/bin/sh -c "/usr/bin/docker run --rm \
  --name octoblu-meshblu-core-dispatcher-env-%i \
  -e ETCDCTL_PEERS=http://$(ifconfig docker0 | grep 'inet ' | awk '{print $2}'):2379 \
  quay.io/octoblu/etcd-to-env /octoblu/meshblu-core-dispatcher/env > /tmp/octoblu-meshblu-core-dispatcher-%i.env \
"
ExecStart=/bin/sh -c "/usr/bin/docker run --rm \
  --name octoblu-meshblu-core-dispatcher-%i \
  --env-file /tmp/octoblu-meshblu-core-dispatcher-%i.env \
  $(/usr/bin/etcdctl get /octoblu/meshblu-core-dispatcher/docker_url) \
  node command-dispatch.js \
"
ExecStop=/usr/bin/docker kill octoblu-meshblu-core-dispatcher-%i

[Install]
WantedBy=multi-user.target

[X-Fleet]
MachineMetadata=Beta=true
MachineMetadata=Service=true

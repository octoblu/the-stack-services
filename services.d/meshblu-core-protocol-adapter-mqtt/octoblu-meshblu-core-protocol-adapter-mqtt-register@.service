[Unit]
Description=octoblu-meshblu-core-protocol-adapter-mqtt-register


[Service]
TimeoutStartSec=300
EnvironmentFile=/etc/environment
Restart=always
ExecStartPre=/bin/bash -c " \
  echo 'Writing kronk to /tmp' \
  && /usr/bin/etcdctl get /kronk/register/start-pre > /tmp/octoblu-meshblu-core-protocol-adapter-mqtt-register-%i-kronk-start-pre \
  && /usr/bin/etcdctl get /kronk/register/start > /tmp/octoblu-meshblu-core-protocol-adapter-mqtt-register-%i-kronk-start \
  && /usr/bin/etcdctl get /kronk/register/stop > /tmp/octoblu-meshblu-core-protocol-adapter-mqtt-register-%i-kronk-stop \
  && chmod +x /tmp/octoblu-meshblu-core-protocol-adapter-mqtt-register-%i-kronk-* \
"
ExecStartPre=/bin/bash -c " \
  /tmp/octoblu-meshblu-core-protocol-adapter-mqtt-register-%i-kronk-start-pre \
    octoblu-meshblu-core-protocol-adapter-mqtt \
    %i \
    /octoblu/meshblu-core-protocol-adapter-mqtt/register-env \
    1883/tcp \
"
ExecStart=/bin/sh -c " \
  /tmp/octoblu-meshblu-core-protocol-adapter-mqtt-register-%i-kronk-start \
    octoblu-meshblu-core-protocol-adapter-mqtt \
    %i \
    octoblu-meshblu-core-protocol-adapter-mqtt \
    /octoblu/register-tcp/docker_url \
"
ExecStop=/bin/sh -c " \
  /tmp/octoblu-meshblu-core-protocol-adapter-mqtt-register-%i-kronk-stop \
    octoblu-meshblu-core-protocol-adapter-mqtt \
    %i \
"

[X-Fleet]
X-ConditionMachineOf=octoblu-meshblu-core-protocol-adapter-mqtt@%i.service

[Unit]
Description=octoblu-meshblu-server-websocket-sidekick
Wants=vulcand.service
After=vulcand.service

[Service]
TimeoutStartSec=30
Restart=always
ExecStart=/bin/sh -c "/usr/bin/etcdctl exec-watch \
  --recursive /octoblu/meshblu-server-websocket \
  -- docker stop \
      --time=30 \
      octoblu-meshblu-server-websocket"

[Install]
WantedBy=multi-user.target

[X-Fleet]
Global=true
MachineMetadata=Services=true

[Unit]
Description=octoblu-meshblu-server-websocket
Wants=vulcand.service
After=vulcand.service

[Service]
TimeoutStartSec=300
Restart=always
ExecStartPre=/usr/bin/etcdctl get /octoblu/meshblu-server-websocket/docker_url || /usr/bin/echo "etcd did not contain /octoblu/meshblu-server-websocket/docker_url" && exit 1
ExecStartPre=-/usr/bin/docker rm --force octoblu-meshblu-server-websocket-env octoblu-meshblu-server-websocket
ExecStartPre=/bin/sh -c "/usr/bin/docker run --rm \
  --name octoblu-meshblu-server-websocket-env \
  -e ETCDCTL_PEERS=http://$(ifconfig docker0 | grep 'inet ' | awk '{print $2}'):2379 \
  quay.io/octoblu/etcd-to-env /octoblu/meshblu-server-websocket/env > /tmp/octoblu-meshblu-server-websocket.env \
"
ExecStart=/bin/sh -c "/usr/bin/docker run --rm \
  --name octoblu-meshblu-server-websocket \
  --env-file /tmp/octoblu-meshblu-server-websocket.env \
  -e MESHBLU_SERVER=$(ifconfig docker0 | grep 'inet ' | awk '{print $2}') \
  --publish $(/usr/bin/etcdctl get /octoblu/meshblu-server-websocket/port):80 \
  --memory 1024m \
  $(/usr/bin/etcdctl get /octoblu/meshblu-server-websocket/docker_url) \
"
ExecStop=/usr/bin/docker kill octoblu-meshblu-server-websocket

[Install]
WantedBy=multi-user.target

[X-Fleet]
Global=true
MachineMetadata=Services=true

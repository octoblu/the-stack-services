[Unit]
Description=octoblu-meshblu-register
Wants=vulcand.service
After=vulcand.service

[Service]
TimeoutStartSec=30
Restart=always
ExecStart=/bin/sh -c "/usr/bin/etcdctl set /octoblu/meshblu/backends/$(curl http://instance-data/latest/meta-data/local-ipv4) \"$(date)\""

[Install]
WantedBy=multi-user.target

[X-Fleet]
Global=true
MachineMetadata=Beta=true

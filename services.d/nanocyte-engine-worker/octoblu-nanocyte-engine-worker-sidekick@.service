[Unit]
Description=octoblu-nanocyte-engine-worker-sidekick
Wants=vulcand.service
After=vulcand.service

[Service]
TimeoutStartSec=30
Restart=always
ExecStart=/bin/sh -c "/usr/bin/etcdctl exec-watch \
  /octoblu/nanocyte-engine-worker/restart \
  -- sh -c \"(docker inspect --format='{{.Id}}' --type=image \$(etcdctl get /octoblu/nanocyte-engine-worker/docker_url) \
               || docker pull \$(etcdctl get /octoblu/nanocyte-engine-worker/docker_url)) \
               && docker stop \
                    --time=30 \
                    octoblu-nanocyte-engine-worker-%i\""

[Install]
WantedBy=multi-user.target

[X-Fleet]
X-ConditionMachineOf=octoblu-nanocyte-engine-worker@%i.service

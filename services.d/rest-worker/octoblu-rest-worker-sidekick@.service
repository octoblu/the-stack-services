[Unit]
Description=octoblu-rest-worker-sidekick

[Service]
TimeoutStartSec=30
Restart=always
ExecStart=/bin/sh -c "/usr/bin/etcdctl exec-watch \
  /octoblu/rest-worker/restart \
  -- sh -c \"(docker inspect --format='{{.Id}}' --type=image \$(etcdctl get /octoblu/rest-worker/docker_url) \
               || docker pull \$(etcdctl get /octoblu/rest-worker/docker_url)) \
               && docker stop \
                    --time=5 \
                    octoblu-rest-worker-%i\""

[Install]
WantedBy=multi-user.target

[X-Fleet]
X-ConditionMachineOf=octoblu-rest-worker@%i.service

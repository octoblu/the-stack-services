[Unit]
Description=octoblu-shadow-service-blue-sidekick

[Service]
TimeoutStartSec=30
Restart=always
ExecStart=/bin/sh -c "/usr/bin/etcdctl exec-watch \
  /octoblu/shadow-service/restart \
  -- sh -c \"(docker inspect --format='{{.Id}}' --type=image \$(etcdctl get /octoblu/shadow-service/blue/docker_url) \
               || docker pull \$(etcdctl get /octoblu/shadow-service/docker_url)) \
               && docker stop \
                    --time=5 \
                    octoblu-shadow-service-blue-%i\""

[Install]
WantedBy=multi-user.target

[X-Fleet]
X-ConditionMachineOf=octoblu-shadow-service-blue@%i.service

[Unit]
Description=octoblu-shadow-service-blue
Wants=vulcand.service
After=vulcand.service

[Service]
TimeoutStartSec=300
Restart=always

ExecStartPre=/bin/sh -c '/usr/bin/docker login \
  --username $(/usr/bin/etcdctl get /docker/quay.io/username) \
  --password $(/usr/bin/etcdctl get /docker/quay.io/password) \
  --email $(/usr/bin/etcdctl get /docker/quay.io/email) \
  quay.io'

ExecStartPre=/usr/bin/etcdctl get /octoblu/shadow-service/blue/port || /usr/bin/echo "etcd did not contain /octoblu/shadow-service/blue/port" && exit 1
ExecStartPre=/usr/bin/etcdctl get /octoblu/shadow-service/blue/docker_url || /usr/bin/echo "etcd did not contain /octoblu/shadow-service/blue/docker_url" && exit 1
ExecStartPre=-/usr/bin/docker rm --force octoblu-shadow-service-blue-env-%i octoblu-shadow-service-blue-%i
ExecStartPre=/bin/sh -c "/usr/bin/docker run --rm \
  --name octoblu-shadow-service-blue-env-%i \
  -e ETCDCTL_PEERS=http://$(ifconfig docker0 | grep 'inet ' | awk '{print $2}'):2379 \
  quay.io/octoblu/etcd-to-env /octoblu/shadow-service/env > /tmp/octoblu-shadow-service-blue.env \
"
ExecStart=/bin/sh -c "/usr/bin/docker run --rm \
  --name octoblu-shadow-service-blue-%i \
  --env-file /tmp/octoblu-shadow-service-blue.env \
  --memory 512m \
  -p $(/usr/bin/etcdctl get /octoblu/shadow-service/blue/port):80 \
  $(/usr/bin/etcdctl get /octoblu/shadow-service/blue/docker_url) \
"
ExecStop=/usr/bin/docker stop --time=5 octoblu-shadow-service-blue-%i

[Install]
WantedBy=multi-user.target

[X-Fleet]
Conflicts=octoblu-shadow-service-blue@*.service
MachineMetadata=Services=true

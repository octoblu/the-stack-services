[Unit]
Description=octoblu-slurry-slack-bot-sidekick
After=octoblu-slurry-slack-bot@%i.service

[Service]
EnvironmentFile=/etc/environment
TimeoutStartSec=30
Restart=always

ExecStartPre=/bin/bash -c " \
  echo 'Writing kronk' \
  && mkdir -p /run/kronk/octoblu-slurry-slack-bot-sidekick-%i \
  && /usr/bin/curl -s http://kronk.octoblu.com/latest/wrapper/run > /run/kronk/octoblu-slurry-slack-bot-sidekick-%i/kronk-run \
  && chmod +x /run/kronk/octoblu-slurry-slack-bot-sidekick-%i/kronk-run \
"
ExecStart=/bin/sh -c " \
  /run/kronk/octoblu-slurry-slack-bot-sidekick-%i/kronk-run \
    /kronk/sidekick/start octoblu-slurry-slack-bot-%i \
    octoblu \
    slurry-slack-bot \
    %i \
"

[Install]
WantedBy=multi-user.target

[X-Fleet]
X-ConditionMachineOf=octoblu-slurry-slack-bot@%i.service

[Unit]
Description=octoblu-sms-service-sidekick
After=octoblu-sms-service@%i.service

[Service]
TimeoutStartSec=30
Restart=always


ExecStartPre=/bin/bash -c " \
  echo 'Writing kronk' \
  && mkdir -p /run/kronk/octoblu-sms-service-sidekick-%i \
  && /usr/bin/etcdctl get /kronk/wrapper/run > /run/kronk/octoblu-sms-service-sidekick-%i/kronk-run \
  && chmod +x /run/kronk/octoblu-sms-service-sidekick-%i/kronk-run \
"
ExecStart=/usr/bin/etcdctl exec-watch \
  /octoblu/sms-service/restart \
  -- /run/kronk/octoblu-sms-service-sidekick-%i/kronk-run \
    /kronk/sidekick/start octoblu-sms-service-sidekick-%i \
    10 /octoblu/sms-service/docker_url octoblu-sms-service-%i octoblu-sms-service-register-%i

[Install]
WantedBy=multi-user.target

[X-Fleet]
X-ConditionMachineOf=octoblu-sms-service@%i.service

[Unit]
Description=octoblu-sns-service-sidekick


[Service]
TimeoutStartSec=30
Restart=always


ExecStartPre=/bin/bash -c " \
  echo 'Writing kronk to /tmp' \
  && /usr/bin/etcdctl get /kronk/sidekick/start > /tmp/octoblu-sns-service-sidekick-%i-kronk-start \
  && chmod +x /tmp/octoblu-sns-service-sidekick-%i-kronk-* \
"
ExecStart=/usr/bin/etcdctl exec-watch \
  /octoblu/sns-service/restart \
  -- /tmp/octoblu-sns-service-sidekick-%i-kronk-start 10 /octoblu/sns-service/docker_url octoblu-sns-service-%i octoblu-sns-service-register-%i

[Install]
WantedBy=multi-user.target

[X-Fleet]
X-ConditionMachineOf=octoblu-sns-service@%i.service

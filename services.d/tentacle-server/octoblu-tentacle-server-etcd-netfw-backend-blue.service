[Unit]
Description=etcd-netfw blue backend for tentacle-server
Wants=docker.service
After=docker.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill octoblu-tentacle-server-etcd-netfw-backend-blue
ExecStartPre=-/usr/bin/docker rm octoblu-tentacle-server-etcd-netfw-backend-blue
ExecStartPre=/usr/bin/docker pull octoblu/etcd-netfw
ExecStart=/usr/bin/sh -c "/usr/bin/docker run \
  --rm \
  --name octoblu-tentacle-server-etcd-netfw-backend-blue \
  -p $(etcdctl get octoblu/tentacle-server/blue/backend_port):1337 \
  octoblu/etcd-netfw \
    -etcdAddress=http://$(ifconfig docker0 | grep 'inet ' | awk '{print $2}'):2379 \
    -servicePath=/octoblu/tentacle-server/etcd-netfw/backends/blue \
"
ExecStop=/usr/bin/docker kill octoblu-tentacle-server-etcd-netfw-backend-blue

[X-Fleet]
Global=true
MachineMetadata=Services=true

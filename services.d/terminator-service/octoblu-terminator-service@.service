[Unit]
Description=octoblu-terminator-service
Wants=octoblu-terminator-service-register@%i.service
Wants=octoblu-terminator-service-sidekick@%i.service

[Service]
EnvironmentFile=/etc/environment
TimeoutStartSec=300
StartLimitInterval=30
StartLimitBurst=30
Restart=always

ExecStartPre=/bin/bash -c " \
  echo 'Writing kronk' \
  && mkdir -p /run/kronk/octoblu-terminator-service-%i \
  && /usr/bin/curl -s http://kronk.octoblu.com/latest/wrapper/run > /run/kronk/octoblu-terminator-service-%i/kronk-run \
  && chmod +x /run/kronk/octoblu-terminator-service-%i/kronk-run \
"
ExecStartPre=/bin/bash -c " \
  /run/kronk/octoblu-terminator-service-%i/kronk-run \
    /kronk/service/start-pre octoblu-terminator-service-%i \
      octoblu \
      terminator-service \
      %i \
"
ExecStart=/bin/bash -c " \
  /run/kronk/octoblu-terminator-service-%i/kronk-run \
    /kronk/service/start octoblu-terminator-service-%i \
      octoblu \
      terminator-service \
      %i \
"
ExecStop=/bin/bash -c " \
  /run/kronk/octoblu-terminator-service-%i/kronk-run \
    /kronk/service/stop octoblu-terminator-service-%i \
      octoblu \
      terminator-service \
      %i \
"

[Install]
WantedBy=multi-user.target

[X-Fleet]
MachineMetadata=Services=true

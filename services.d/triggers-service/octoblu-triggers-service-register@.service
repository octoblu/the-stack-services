[Unit]
Description=octoblu-triggers-service-register
After=octoblu-triggers-service@%i.service

[Service]
TimeoutStartSec=300
EnvironmentFile=/etc/environment
Restart=always
ExecStartPre=/bin/bash -c " \
  echo 'Writing kronk to /tmp' \
  && /usr/bin/etcdctl get /kronk/register/start-pre > /tmp/octoblu-triggers-service-register-%i-kronk-start-pre \
  && /usr/bin/etcdctl get /kronk/register/start > /tmp/octoblu-triggers-service-register-%i-kronk-start \
  && /usr/bin/etcdctl get /kronk/register/stop > /tmp/octoblu-triggers-service-register-%i-kronk-stop \
  && chmod +x /tmp/octoblu-triggers-service-register-%i-kronk-* \
"
ExecStartPre=/bin/bash -c " \
  /tmp/octoblu-triggers-service-register-%i-kronk-start-pre \
    octoblu-triggers-service \
    %i \
    /octoblu/triggers-service/register-env \
"
ExecStart=/bin/sh -c " \
  /tmp/octoblu-triggers-service-register-%i-kronk-start \
    octoblu-triggers-service \
    %i \
"
ExecStop=/bin/sh -c " \
  /tmp/octoblu-triggers-service-register-%i-kronk-stop \
    octoblu-triggers-service \
    %i \
"

[X-Fleet]
X-ConditionMachineOf=octoblu-triggers-service@%i.service

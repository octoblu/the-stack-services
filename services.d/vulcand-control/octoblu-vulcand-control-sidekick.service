[Unit]
Description=octoblu-vulcand-control-sidekick
After=octoblu-vulcand-control.service

[Service]
TimeoutStartSec=30
Restart=always


ExecStartPre=/bin/bash -c " \
  echo 'Writing kronk' \
  && mkdir -p /run/kronk/octoblu-vulcand-control-sidekick \
  && /usr/bin/etcdctl get /kronk/wrapper/run > /run/kronk/octoblu-vulcand-control-sidekick/kronk-run \
  && chmod +x /run/kronk/octoblu-vulcand-control-sidekick/kronk-run \
"
ExecStart=/usr/bin/etcdctl exec-watch \
  /octoblu/vulcand-control/restart \
  -- /run/kronk/octoblu-vulcand-control-sidekick/kronk-run \
    /kronk/sidekick/start octoblu-vulcand-control-sidekick \
    10 /octoblu/vulcand-control/docker_url octoblu-vulcand-control octoblu-vulcand-control-register

[Install]
WantedBy=multi-user.target

[X-Fleet]
Global=true
MachineMetadata=Services=true

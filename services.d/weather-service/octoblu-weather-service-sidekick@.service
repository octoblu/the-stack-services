[Unit]
Description=octoblu-weather-service-sidekick


[Service]
TimeoutStartSec=30
Restart=always


ExecStartPre=/bin/bash -c " \
  echo 'Writing kronk to /tmp' \
  && /usr/bin/etcdctl get /kronk/sidekick/start > /tmp/octoblu-weather-service-sidekick-%i-kronk-start \
  && chmod +x /tmp/octoblu-weather-service-sidekick-%i-kronk-* \
"
ExecStart=/usr/bin/etcdctl exec-watch \
  /octoblu/weather-service/restart \
  -- /tmp/octoblu-weather-service-sidekick-%i-kronk-start 10 /octoblu/weather-service/docker_url octoblu-weather-service-%i octoblu-weather-service-register-%i

[Install]
WantedBy=multi-user.target

[X-Fleet]
X-ConditionMachineOf=octoblu-weather-service@%i.service
